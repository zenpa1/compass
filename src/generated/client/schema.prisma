// 1. Connection Configuration
datasource db {
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

// 2. Enums (Fixed values from SDD)
enum UserType {
  OWNER
  EMPLOYEE
}

enum RoleCategory {
  PHOTO
  VIDEO
  EDITOR
  ASSISTANT // Added based on SDD Table 3.2
  ANY // Added based on SDD Table 3.4 Description
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
}

enum WorkStatus {
  PENDING
  OPEN
  ASSIGNED
  REVIEW
  COMPLETED
}

enum AssignmentStatus {
  PENDING
  CONFIRMED
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

// 3. Models (Tables from SDD)

// Based on SDD Table 3.1: Users
model User {
  user_id    Int      @id @default(autoincrement())
  email      String   @unique @db.VarChar(50)
  google_id  String?  @unique @db.VarChar(21)
  full_name  String?  @db.VarChar(50)
  avatar_url String?  @db.Text
  user_type  UserType @default(EMPLOYEE)
  created_at DateTime @default(now())

  // Relations
  profile      UserProfile?
  assignments  Assignment[]
  applications WorkApplication[]
  tasks        Task[]
}

// Based on SDD Table 3.2: User Profiles
model UserProfile {
  profile_id        Int           @id @default(autoincrement())
  user_id           Int           @unique
  user              User          @relation(fields: [user_id], references: [user_id])
  primary_role      RoleCategory
  secondary_role    RoleCategory?
  reliability_score Decimal       @default(100.00) @db.Decimal(5, 2)
}

// Based on SDD Table 3.3: Projects
model Project {
  project_id          Int           @id @default(autoincrement())
  project_name        String        @db.VarChar(50) // Logic check: Duplicate Name Prevention
  client_name         String        @db.VarChar(50)
  project_location    String        @db.Text
  project_description String        @db.VarChar(500)
  project_start_date  DateTime
  project_end_date    DateTime
  project_status      ProjectStatus @default(ACTIVE)

  works Work[]
}

// Based on SDD Table 3.4: Works
model Work {
  work_id    Int     @id @default(autoincrement())
  project_id Int
  project    Project @relation(fields: [project_id], references: [project_id])

  // Note: Using String for flexibility, though SDD says Enum. 
  // This allows "Drone Pilot" or new roles without DB migration.
  project_role String @db.VarChar(50)

  role_category    RoleCategory
  expected_salary  Decimal      @default(0.00) @db.Decimal(10, 2)
  is_open_pool     Boolean      @default(false) // SDD TinyInt(1) maps to Boolean
  work_description String       @db.VarChar(255)
  work_start_date  DateTime
  work_start_time  DateTime?
  work_end_time    DateTime?
  work_status      WorkStatus   @default(OPEN)

  assignments  Assignment[]
  applications WorkApplication[]
}

// Based on SDD Table 3.5: Assignments
model Assignment {
  assignment_id     Int              @id @default(autoincrement())
  work_id           Int
  work              Work             @relation(fields: [work_id], references: [work_id])
  user_id           Int? // Nullable for "Outsider"
  user              User?            @relation(fields: [user_id], references: [user_id])
  outsider_name     String?          @db.VarChar(100)
  assignment_status AssignmentStatus @default(PENDING)
  withdrawal_reason String?          @db.Text
}

// Based on SDD Table 3.6: Work Applications
model WorkApplication {
  application_id     Int               @id @default(autoincrement())
  work_id            Int
  work               Work              @relation(fields: [work_id], references: [work_id])
  user_id            Int
  user               User              @relation(fields: [user_id], references: [user_id])
  application_status ApplicationStatus @default(PENDING)
}

// Based on SDD Table 3.7: Tasks
model Task {
  task_id    Int       @id @default(autoincrement())
  user_id    Int
  user       User      @relation(fields: [user_id], references: [user_id])
  task_title String    @db.VarChar(100)
  task_desc  String?   @db.VarChar(255)
  due_date   DateTime?

  tags TaskTag[]
}

// Based on SDD Table 3.8: Tags
model Tag {
  tag_id    Int    @id @default(autoincrement())
  tag_name  String @unique @db.VarChar(50)
  color_hex String @default("#808080") @db.VarChar(7)

  tasks TaskTag[]
}

// Based on SDD Table 3.9: Task Tags (Many-to-Many Link)
model TaskTag {
  task_tag_id Int  @id @default(autoincrement())
  task_id     Int
  task        Task @relation(fields: [task_id], references: [task_id])
  tag_id      Int
  tag         Tag  @relation(fields: [tag_id], references: [tag_id])
}
